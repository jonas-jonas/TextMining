    "version": "0.2.0",
    "configurations": [
    {
        "name": "Flask",
        "type": "python",
        "request": "launch",
        "module": "flask",
        "env": {
            "FLASK_APP": "app/main.py",
            "FLASK_ENV": "development",
            "FLASK_DEBUG": "1"
        },
        "args": [
            "run",
            "--reload"
        ],
        "jinja": true,
        "redirectOutput": false,
        "console": "integratedTerminal"
    },
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "redirectOutput": true,
            "console": "internalConsole"
        },
        {
            "name": "Python: Main.py",
            "type": "python",
            "request": "launch",
            "program": "/home/jonas/Repositories/text_mining/main.py",
            "cwd": "${workspaceFolder}",
            "redirectOutput": true,
            "console": "internalConsole"
        }
    ]
}