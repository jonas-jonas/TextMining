{
    "python.pythonPath": ".env/bin/python",
    "python.linting.pylintEnabled": false,
    "python.linting.enabled": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "env": true
    },
    "[html]": {
        "editor.tabSize": 2
    },
    "spellright.language": [
        "deutsch"
    ],
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext",
        "asciidoc"
    ],
    "python.linting.flake8Enabled": true,
}